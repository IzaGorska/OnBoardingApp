@model IEnumerable<WebApplication.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Projekty</h2>

<div class="btn btn-default">
    @Html.ActionLink("Dodaj nowy projekt", "Create")
</div>

<div class="panel-group">
    @foreach (var item in Model)
    {
        <div class="col-md-12" style="margin-top:20px">
            <div class="panel panel-info">
                <div class="panel panel-heading"><h3> @Html.DisplayFor(modelItem => item.Name)</h3></div>
                <div class="panel-body"> @Html.DisplayFor(modelItem => item.Description)</div>
                <div class="btn">  @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }) </div>
                <div class="btn">  @Html.ActionLink("Details", "Details", new { id = item.ProjectID })</div>
                <div class="btn">
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID })
                </div>

            </div>

        </div>

    }
</div>    




