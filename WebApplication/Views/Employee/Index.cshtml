@model IEnumerable<WebApplication.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Pracownicy</h2>



@using (Html.BeginForm())
{
    <p>
        Wyszukaj: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table table-hover" style="margin-top:30px">
    <tr class="info">

        <th>
            @Html.ActionLink("Nazwisko", "Index", new { sortOrder = ViewBag.LastNameSortParm })
        </th>
        <th>
            Imię
        </th>


        <th>
            @Html.ActionLink("Lokalizacja", "Index", new { sortOrder = ViewBag.LocationSortParm })
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>

            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Dane", "Details", new { id = item.ID }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<div class="btn btn-default">
    @Html.ActionLink("Dodaj nowego pracownika", "Create")
</div>

